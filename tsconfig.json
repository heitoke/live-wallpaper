{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"],
            "@/*": ["renderer/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "hywer",
        "types": [
            "./global.d.ts",
            "./renderer/index.d.ts",
            "electron-vite/node"
        ]
    }
}